                        <td>{{ encounters.day8id.name }}</td>
                        <td>{{ encounters.day8id.cardSet }} - {{ encounters.day8id.cardType }}  {{ encounters.day8id.cardNum }}</td>
                    </tr>
                {% endif %}
                {% if encounters.day9id is not empty %}
                    <tr>
                        <td>Day 9</td>
                        <td>{{ encounters.day9id.name }}</td>
                        <td>{{ encounters.day9id.cardSet }} - {{ encounters.day9id.cardType }}  {{ encounters.day9id.cardNum }}</td>
                    </tr>
                {% endif %}
