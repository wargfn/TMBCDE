                    <td>{{ encounters.day4id.name }}</td>
                    <td>{{ encounters.day4id.cardSet }} - {{ encounters.day4id.cardType }}  {{ encounters.day4id.cardNum }}</td>
                </tr>
                <tr>
                    <td>Day 5</td>
                    <td>{{ encounters.day5id.name }}</td>
                    <td>{{ encounters.day5id.cardSet }} - {{ encounters.day5id.cardType }}  {{ encounters.day5id.cardNum }}</td>
                </tr>
                <tr>
                    <td>Day 6</td>
                    <td>{{ encounters.day6id.name }}</td>
                    <td>{{ encounters.day6id.cardSet }} - {{ encounters.day6id.cardType }}  {{ encounters.day6id.cardNum }}</td>
                </tr>
                <tr>
                    <td>Day 7</td>
                    <td>{{ encounters.day7id.name }}</td>
                    <td>{{ encounters.day7id.cardSet }} - {{ encounters.day7id.cardType }}  {{ encounters.day7id.cardNum }}</td>
                </tr>
                {% if encounters.day8id is not empty %}
                    <tr>
