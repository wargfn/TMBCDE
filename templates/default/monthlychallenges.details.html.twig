{% extends 'base.html.twig' %}

{% block title %}Monthly Challenge{% endblock %}

{% block body %}
    <div class="container">
        {% if encounters is defined and encounters is not empty %}
            {% if monthlyChallenges is defined and monthlyChallenges is not empty %}
            {% if tyrant is defined and tyrant is not empty %}
                <h1>{{ monthlyChallenges.name }}</h1>
                <p>{{ monthlyChallenges.description }} - {{ monthlyChallenges.challengetype }} - {{ monthlyChallenges.challengeset }}</p>
                <table class="table table-borderless">
                    <tr>
                        <th></th>
                        <th>Tyrant Name</th>
                        <th>Progress</th>
                        <th>Days</th>
                    </tr>
                    <tr>
                        <td><img src="{{ asset('/images/'~tyrant.name~'.jpg') }}" width="100px" height="100px"></td>
                        <td>{{ tyrant.name }}</td>
                        <td>{{ tyrant.progress }}</td>
                        <td>{{ tyrant.days }}</td>
                    </tr>
                </table>
            {% endif %}
            {% endif %}
            <table class="table table-borderless">
                <tr>
                    <th>Day</th>
                    <th>Name</th>
                    <th>Card</th>
                </tr>
                <tr>
                    <td>Day 1</td>
                    <td>{{ encounters.day1id.name }}</td>
                    <td>{{ encounters.day1id.cardSet }} - {{ encounters.day1id.cardType }}  {{ encounters.day1id.cardNum }}</td>
                </tr>
                <tr>
                    <td>Day 2</td>
                    <td>{{ encounters.day2id.name }}</td>
                    <td>{{ encounters.day2id.cardSet }} - {{ encounters.day2id.cardType }}  {{ encounters.day2id.cardNum }}</td>
                </tr>
                <tr>
